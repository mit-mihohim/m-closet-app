.header
  .top-header
    = link_to root_path, class: "top-header__brand" do
      %h1 m-closet
    .top-header__bottom
  .bottom-header
    .nav-bar
      %ul.nav-bar__items
        %li.items__all
          ALL
        %li.items__category
          Category
      %ul.nav-bar__search-box
        = form_with(url: "#", local: true, method: :get, class: "search-box") do |f|
          = f.text_field :keyword, placeholder: "アイテムを探す"
          = button_tag type: "submit", class: "search-box__btn" do
            Search
      %ul.nav-bar__user-menu
        %li.account
          username
        %li.login
          Login
        %li.signup
          新規会員登録
    .bottom-header__bottom